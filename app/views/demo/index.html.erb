<style>
    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        top: 50%;
        transform: translateY(-50%);
    }

    .carousel-control-prev {
        left: -3%;
    }

    .carousel-control-next {
        right: -3%;
    }

    .carousel-control-next,
    .carousel-control-prev {
        filter: invert(100%);
    }

    .carousel-control-prev-icon, .carousel-control-next-icon{
        height: 1.5rem;
        width: 1.5rem;
    }

    #citiesCarousel {
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
    }
    .card-img-top {
    width: 100%;
    height: 10vw;
    object-fit: cover;
}
</style>

<div class="container">
    <div class="my-3 p-4 bg-body rounded shadow-sm">
        <h3>Select a city</h3>
        <div id="citiesCarousel" class="carousel slide" data-interval="false" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% @cities.each_slice(4).with_index do |slice, index| %>
                    <div class="carousel-item <%= 'active' if index == 0 %>">
                        <div class="row">
                            <% slice.each do |city| %>
                                <div class="col-md-3">
                                    <div class="card">
                                        <img src="<%= city.image_url || 'https://placehold.co/100' %>" class="card-img-top" alt="<%= city.name %>">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= city.name %></h5>
                                            <p class="card-text">Population: <%= number_with_delimiter(city.population_estimate, :delimiter => ',') %></p>
                                            <button class="btn btn-outline-primary">Select</button>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#citiesCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#citiesCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
